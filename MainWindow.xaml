<UserControl x:Class="TuProyecto.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F4F6F9">

    <Grid>
        <Border Width="350"
                Padding="30"
                Background="White"
                CornerRadius="15"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <StackPanel>

                <!-- Título -->
                <TextBlock Text="Login"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Usuario -->
                <TextBlock Text="Usuario"/>
                <TextBox x:Name="txtUsuario"
                         Height="35"
                         Margin="0,5,0,15"/>

                <!-- Password -->
                <TextBlock Text="Password"/>
                <PasswordBox x:Name="txtPassword"
                             Height="35"
                             Margin="0,5,0,25"/>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">

                    <Button x:Name="btnLogin"
                            Content="Login"
                            Width="130"
                            Height="40"
                            Margin="0,0,10,0"
                            Background="#4A90E2"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="btnLogin_Click"/>

                    <Button x:Name="btnSignUp"
                            Content="Sign Up"
                            Width="130"
                            Height="40"
                            Background="#28A745"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="btnSignUp_Click"/>

                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>


